@model RegisterDTO
@{
    ViewBag.Title = "Login";
}

<form asp-action="Login" asp-controller="Account" asp-route-returnurl="@Context.Request.Query["returnurl"]" method="post">
    <div class="flex w-50">
        <div class="flex w-100">
            <div class="w-25">
                <label for="UserName" class="form-label">UserName</label>
            </div>
            <div class="flex-1">
                <input asp-for="UserName" class="form-input" />
                <span asp-validation-for="UserName" class="text-red"></span>
            </div>
        </div>
        <div class="flex w-100">
            <div class="w-25">
                <label for="Password" class="form-label">Password</label>
            </div>
            <div class="flex-1">
                <input asp-for="Password" class="form-input" />
                <span asp-validation-for="Password" class="text-red"></span>
            </div>
        </div>

        <button type="submit" class="button button-blue-back">Login</button>
    </div>
    <div asp-validation-summary="All" class="text-red"></div>

    @if (ViewBag.Errors is not null)
    {
        <div class="text-red ml mt">
            <ul>
                @foreach (string error in ViewBag.Errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }
</form>

