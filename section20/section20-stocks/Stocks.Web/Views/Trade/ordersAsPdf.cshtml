@{
    Layout = null;
    var link = "http://" + Context.Request.Host + "/stylesheet.css";
}
<link rel="stylesheet" href="@link" />

@model List<IOrderResponse>

<h3>Orders</h3>
<table class="table">
    <thead>
        <tr>
            <th>Date and Time</th>
            <th>Stock</th>
            <th>Order Type</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (IOrderResponse order in Model)
        {
            <tr>
                <td>@order.DateAndTimeOfOrder.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@($"{order.StockName}({order.StockSymbol})")</td>
                <td>@order.OrderType</td>
                <td>@order.Quantity</td>
                <td>@order.Price</td>
            </tr>
        }
    </tbody>
</table>

